extends ../layout

block content
  div(class="container")
    h1.
         #{title}
    ul
        - each project, i in projects
            li
                p Name: #{project.naziv}
                p Description: #{project.opis}
                p Price: #{project.cijena}
                p Jobs: #{project.poslovi}
                p Start date: #{project.pdatum}
                p End date: #{project.zdatum}
                form(action='/projects/#{project._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                    input(type='hidden',value='DELETE',name='_method')
                    button(type='submit', class="btn btn-danger").
                        Delete
                a(href='/projects/#{project._id}/edit', class="btn btn-primary") Edit
                a(href='/projects/#{project._id}', class="btn btn-primary") Show