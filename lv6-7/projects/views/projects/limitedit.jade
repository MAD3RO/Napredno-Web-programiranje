extends ../layout

block content
  div(class="container")
    h1.
        Info #{project._id}
    p Name: #{project.naziv}
    p Description: #{project.opis}
    p Price: #{project.cijena}
    form(action='/projects/#{project._id}/limitedit',method='post',name='updateproject',enctype='application/x-www-form-urlencoded')
      p Jobs:
       input#inputPoslovi(type='text', value='#{project.poslovi}', name='poslovi')
      p
                      input(type='hidden',value='PUT',name='_method')
                  p
                      button#btnSubmit(type='submit', class="btn btn-primary").
                          Update
    p Start date: #{pdatum}
    p End date: #{zdatum}
    p Members:
    ul
          - each clan_tima, i in clanovi_tima
                   li
                       = clan_tima.username
    p Arhivirano: #{project.arhivirano}